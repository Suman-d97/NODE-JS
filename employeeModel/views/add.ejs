<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Add Employee</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <style>
      body {
        background: #f4f6f9;
      }

      .card {
        border-radius: 10px;
      }

      .image-preview {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        display: none;
        margin-top: 10px;
      }
    </style>
  </head>

  <body>
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form
            action="/employee/add"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="card shadow">
   
              <div class="card-header bg-primary text-white">
                <i class="fa fa-user-plus"></i>
                Add Employee
              </div>

              <ul class="list-group list-group-flush">
   
                <li class="list-group-item">
                  <label>
                    <i class="fa fa-user text-primary"></i>
                    Employee Name
                  </label>

                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    required
                    placeholder="Enter employee name"
                  />
                </li>

                <li class="list-group-item">
                  <label>
                    <i class="fa fa-envelope text-primary"></i>
                    Email
                  </label>

                  <input
                    type="email"
                    class="form-control"
                    name="contact[email]"
                    required
                    placeholder="Enter email"
                  />
                </li>
                <li class="list-group-item">
                  <label>
                    <i class="fa fa-phone text-primary"></i>
                    Phone
                  </label>

                  <input
                    type="number"
                    class="form-control"
                    name="contact[phone]"
                    required
                    placeholder="Enter phone"
                  />
                </li>

                <li class="list-group-item">
                  <label>
                    <i class="fa fa-building text-primary"></i>
                    Department
                  </label>

                  <select
                    class="form-control"
                    name="department[department_name]"
                    multiple
                    required
                  >
                    <option value="Information Technology">
                      Information Technology
                    </option>

                    <option value="Research and Development">
                      Research and Development
                    </option>

                    <option value="Marketing and Sales">
                      Marketing and Sales
                    </option>

                    <option value="Human Resources">
                      Human Resources
                    </option>

                    <option value="Finance and Accounting">
                      Finance and Accounting
                    </option>

                    <option value="Sales & Marketing">
                      Sales & Marketing
                    </option>

                    <option value="Fast-Moving Consumer Goods">
                      Fast-Moving Consumer Goods
                    </option>

                    <option value="Media and Entertainment">
                      Media and Entertainment
                    </option>

                    <option value="Construction and Real Estate">
                      Construction and Real Estate
                    </option>
                  </select>
                </li>

                <li class="list-group-item">
                  <label>
                    <i class="fa fa-location-dot text-primary"></i>
                    Address
                  </label>

                  <input
                    type="text"
                    class="form-control"
                    name="contact[address]"
                    placeholder="Enter address"
                  />
                </li>

                <li class="list-group-item">
                  <label>
                    <i class="fa fa-city text-primary"></i>
                    City
                  </label>

                  <input
                    type="text"
                    class="form-control"
                    name="contact[city]"
                    placeholder="Enter city"
                  />
                </li>

                <li class="list-group-item">
                  <label>
                    <i class="fa fa-map text-primary"></i>
                    Full Address
                  </label>

                  <textarea
                    class="form-control"
                    name="contact[full_address]"
                    rows="2"
                  ></textarea>
                </li>
                <li class="list-group-item">
                  <label>
                    <i class="fa fa-image text-primary"></i>
                    Profile Image
                  </label>

                  <input
                    type="file"
                    class="form-control-file"
                    name="image"
                    onchange="previewImage(event)"
                  />

                  <img
                    id="preview"
                    class="image-preview"
                    alt="Image Preview"
                  />
                </li>
              </ul>

              <div class="card-body text-center">
                <button type="reset" class="btn btn-secondary">
                  <i class="fa fa-eraser"></i>
                  Clear
                </button>

                <button type="submit" class="btn btn-primary">
                  <i class="fa fa-save"></i>
                  Register
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      function previewImage(event) {
        const preview = document.getElementById("preview");

        preview.src = URL.createObjectURL(event.target.files[0]);

        preview.style.display = "block";
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>